{
  "name": "server",
  "version": "0.1.0",
  "main": "./src/index.ts",
  "private": true,
  "dependencies": {
    "@firebase/app-types": "0.x",
    "apollo-server-express": "^2.13.1",
    "commander": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.12.1",
    "graphql": "^14.2.1",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.9",
    "typescript": "3.9.2"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "eslint-config-create-full-stack": "^0.1.2",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-node": "^8.10.1"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "build": "tsc",
    "sync-db": "tsc && node ./build/index.js --sync-db",
    "sync-db-debug": "tsc && node --inspect-brk ./build/index.js --sync-db",
    "watch-node": "nodemon ./build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold,cyan.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect ./build/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold,cyan.bold\" \"yarn watch-ts\" \"yarn serve-debug\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
